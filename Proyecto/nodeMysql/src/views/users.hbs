<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MARVEL</title>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <style>
        /* Estilos para la tabla y el título */
        #table-container {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            overflow: hidden;
            margin-top: 20px;
        }

        #table-title {
            background-color: rgba(0, 0, 0, 0.2);
            color: #000;
            padding: 10px;
            margin: 0;
        }

        #table-users {
            border-collapse: collapse;
            width: 100%;
        }

        #table-users th,
        #table-users td {
            border: none; /* Elimina las líneas visibles */
            padding: 8px;
            text-align: left;
        }

        #table-users th {
            background-color: rgba(242, 242, 242, 0.8);
        }

        /* Estilos para los botones */
        button {
            padding: 8px 12px;
            cursor: pointer;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 3px;
            margin-right: 5px; /* Separación entre botones */
        }

        /* Estilos para el botón "Registrar Nuevo Usuario" */
        .btn-registrar {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <header class="site-header inicio">
        <div class="contenedor contenido-header">
            <div class="barra">
                <a href="/inicio">
                    <div class="contenedor-logo-marvel">
                        <img src="css/img/logo_marvel.png" alt="Logotipo de MARVEL">
                    </div>
                </a>
                <nav class="navegacion">
                    <a href="/catalogo">Catálogo</a>
                    <a href="/personajes">Personajes</a>
                </nav>
            </div>
            <div id="table-container">
                <h1 id="table-title">{{title}}</h1>
                <table id="table-users">
                    <thead>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </thead>
                    {{#each list}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{role}}</td>
                        <td>
                            <!-- Botón Borrar -->
                            <form action="/delete-user" method="post">
                                <input type="hidden" name="userId" value="{{id}}">
                                <button type="submit">Borrar</button>
                            </form>
                            <form action="/update-user-by-admin" method="post">
                                <input type="hidden" name="email" value="{{email}}">
                                <button type="submit">Editar Usuario</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>
            <h1>USUARIOS ADMIN</h1>
        </div> <!-- contenedor -->
    </header>
    <footer class="site-footer seccion">
        <div class="contenedor contenedor-footer">
            <nav class="navegacion">
                <a href="/catalogo">Catálogo</a>
                <a href="/personajes">Personajes</a>
                <a href="/users">Gestión</a>
            </nav>
            <p class="copyright">Todos los derechos reservados 2024 &copy;</p>
        </div>
    </footer>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        // Simula si el usuario es un administrador o no (ajusta según tu lógica real)
        const esAdmin = true; // Cambia a 'false' si el usuario no es administrador

        // Crea el elemento del botón para /users
        const botonUsuarios = document.createElement('a');
        botonUsuarios.href = "/users";
        botonUsuarios.textContent = "Usuarios";

        // Obtén el contenedor de la navegación
        const navegacion = document.querySelector('.navegacion');

        // Inserta el botón de usuarios después del botón de personajes si el usuario es admin
        if (esAdmin) {
            navegacion.insertBefore(botonUsuarios, navegacion.children[2]); // Inserta después del tercer elemento (botón de personajes)
        }
    });
</script>
</body>

</html>
